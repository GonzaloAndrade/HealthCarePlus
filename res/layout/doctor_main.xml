<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top" >
<com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="flip"
        android:layout_marginBottom="-200px"
        ptr:ptrMode="both" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@layout/background"
        android:orientation="vertical"
        android:textColor="#ffff00" 
        android:padding="10dip" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dip"
            android:layout_height="990dp" />
        
        
  
    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
<LinearLayout android:id="@+id/header"
  		    android:orientation="vertical"
  				android:layout_width="fill_parent"
  				android:layout_height="wrap_content"
  				android:background="@layout/header_gradient" 
  				android:paddingTop="5dip"
  				android:paddingBottom="5dip">
  				<!-- Logo Start-->

  			<TextView
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:layout_marginLeft="80dip"
  			    android:layout_marginBottom="10dip"
  			    android:textColor="#FFFFFF"
  			    android:text="Citas de hoy"/>

  				<!-- Logo Ends -->
  		</LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="290dp"
        android:background="@layout/bar_gradient"
        android:orientation="vertical"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/list_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="false"
            android:src="@drawable/icon_list_selected" />

        <ImageView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_calendar" />

        <ImageView
            android:id="@+id/search_main"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:src="@drawable/ic_action_search" />

        <ImageView
            android:id="@+id/logoff_main"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginTop="350dp"
            android:src="@drawable/icon_logout" />

    </LinearLayout>

</RelativeLayout>
